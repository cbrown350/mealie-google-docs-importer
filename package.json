{
  "name": "recipe-importer",
  "version": "1.0.0",
  "description": "Import recipes from Google Drive docs to Mealie",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=23.11.0",
    "npm": ">=10.8.3"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "debug": "nodemon --inspect src/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^2.1.0",
    "dotenv": "^16.0.3",
    "googleapis": "^118.0.0",
    "jsdom": "^26.0.0",
    "mammoth": "^1.6.0",
    "node-fetch": "^3.3.1",
    "open": "^10.1.0",
    "pdf2json": "^3.0.5",
    "recipe-importer": "file:",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.24.0",
    "@eslint/json": "^0.11.0",
    "@eslint/markdown": "^6.3.0",
    "babel-jest": "^29.7.0",
    "buffer-to-stream": "^1.0.0",
    "eslint": "^9.24.0",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-mock": "^29.7.0",
    "nodemon": "^3.1.9"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "sourceMaps": "inline"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "json-summary",
      "lcov",
      "text"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testEnvironment": "jest-environment-node",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {}
  },
  "nodemonConfig": {
    "ext": "js,json",
    "ignore": [
      "output/*",
      "*.log",
      "node_modules/*"
    ],
    "watch": [
      "src/"
    ]
  }
}
